<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- shop -->
<mapper namespace="com.poison.es.service.productGroup.ProductGroupMapper">
    <!-- 结果映射 -->
    <resultMap id="baseResultMap" type="com.poison.es.domain.ProductGroup">
        <id column="PRODUCT_ID" property="productId" jdbcType="BIGINT"/>
        <id column="GROUP_ID" property="groupId" jdbcType="BIGINT"/>
        <result column="PRICE" property="price" jdbcType="DECIMAL"/>
        <result column="REMARK" property="remark" jdbcType="VARCHAR"/>
    </resultMap>
    <!-- 表所有字段 -->
    <sql id="allColumns">
        PRODUCT_ID, GROUP_ID, PRICE, REMARK
    </sql>

    <!-- 批量插入 -->
    <insert id="addProductGroups" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO product_group (<include refid="allColumns"/>)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.productId},#{item.groupId},#{item.price},#{item.remark})
        </foreach>
    </insert>
</mapper>