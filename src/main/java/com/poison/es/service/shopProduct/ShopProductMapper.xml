<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- shop -->
<mapper namespace="com.poison.es.service.shopProduct.ShopProductMapper">
    <!-- 结果映射 -->
    <resultMap id="baseResultMap" type="com.poison.es.domain.ShopProduct">
        <id column="SHOP_ID" property="shopId" jdbcType="BIGINT"/>
        <id column="PRODUCT_ID" property="productId" jdbcType="BIGINT"/>
        <result column="PRICE" property="price" jdbcType="DECIMAL"/>
    </resultMap>
    <!-- 表所有字段 -->
    <sql id="allColumns">
        SHOP_ID, PRODUCT_ID, PRICE
    </sql>
    <!--新增-->
    <insert id="addShopProduct" parameterType="map" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO shop_product (<include refid="allColumns"/>)
        VALUES (
        #{shopId},
        #{productId},
        #{price}
        )
    </insert>
</mapper>